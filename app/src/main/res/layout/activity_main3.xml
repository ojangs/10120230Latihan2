<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#40B4E7">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/almost_there"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="101dp"
                    android:layout_marginTop="139dp"
                    android:gravity="center"
                    android:text="Almost There"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/paragraf"
                    android:layout_width="243dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/almost_there"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="86dp"
                    android:layout_marginTop="193dp"
                    android:gravity="center"
                    android:text="Thank you for registering with us. One more step, you need to check your email
                                  to active your account"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/verivy_btn"
                    android:layout_width="315dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="312dp"
                    android:minHeight="48dp"
                    android:background="#40B4E7"
                    android:src="@drawable/verify_btn"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>


    </LinearLayout>

</LinearLayout>